<Window x:Class="CalTools_WPF.Windows.ReplaceItemSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalTools_WPF.Windows"
        mc:Ignorable="d"
        Title="Replace Item" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Select a replacement for the item: " HorizontalAlignment="Center" FontWeight="Bold" FontSize="14" Margin="20"/>
            <ComboBox x:Name="ReplaceSelectComboBox" Width="300" SelectionChanged="ReplaceSelectComboBox_SelectionChanged"/>
            <DockPanel Margin="0,30,0,0">
                <Button x:Name="ReplaceSelectOK" IsEnabled="False" Content="OK" Width="100" HorizontalAlignment="Center" Margin="80,0,0,0" Click="ReplaceSelectOK_Click"/>
                <Button x:Name="ReplaceSelectCancel" Content="Cancel" Width="100" HorizontalAlignment="Center" Margin="0,0,50,0" Click="ReplaceSelectCancel_Click"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
