<Window x:Class="CalTools_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalTools_WPF"
        mc:Ignorable="d"
        Title="CalTools 4" Height="610" Width="1000" MinHeight="610" MinWidth="1000"
        Name="CalToolsMainWindow" WindowStyle="SingleBorderWindow" Background="#FFF0F0F0">
    <Window.Resources>
        <Style TargetType="Image">
            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <!--Menu bar-->
            <RowDefinition Height="20" MinHeight="20" MaxHeight="20"/>
            <!--Top row buttons-->
            <RowDefinition Height="50" MinHeight="50" MaxHeight="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Menu bar-->
        <DockPanel Grid.Row="0">
            <Menu DockPanel.Dock="Top" Background="White">
                <MenuItem Header="_File"/>
                <MenuItem Header="_Tools"/>
            </Menu>
        </DockPanel>
        <!--Top row buttons-->
        <DockPanel Grid.Row="1">
            <Button x:Name="CalendarButton" Width="35" Height="35" HorizontalAlignment="Left" Margin="10,0,0,0" Click="CalendarButton_Click">
                <Image Source="C:\Users\grobinson\source\repos\CalTools\CalTools WPF\images\LightTheme\calendar.png"/>
            </Button>
            <Button x:Name="ReceivingFolderButton"  MinWidth="150" MaxWidth="500" Height="20" HorizontalAlignment="Stretch" Margin="15,0,0,0" Content="Receiving Folder"/>
            <Button x:Name="CalReportButton"  MinWidth="150" MaxWidth="500" Height="20" HorizontalAlignment="Stretch" Margin="10,0,0,0" Content="Out of Cal Report"/>
            <Button x:Name="UpdateButton"  MinWidth="150" MaxWidth="500" Height="20" HorizontalAlignment="Stretch" Margin="10,0,0,0" Content="Update Items"/>
            <Button x:Name="CalFolderButton"  MinWidth="150" MaxWidth="500" Height="20" HorizontalAlignment="Stretch" Margin="10,0,0,0" Content="Calibrations Folder"/>
            <Button x:Name="SettingsButton"  MinWidth="150" MaxWidth="500" Height="20" HorizontalAlignment="Stretch" Margin="10,0,0,0" Content="Settings"/>
            <Separator HorizontalAlignment="Stretch" Background="White"/>
        </DockPanel>
        <!--Main View-->
        <Grid x:Name="MainViewGrid" Visibility="Visible" Grid.Row="2">
            <Grid.RowDefinitions>
                <!--Side buttons, Tree widget, and item details-->
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0">
                <!--Side buttons-->
                <StackPanel Width="55" HorizontalAlignment="Left">
                    <Button x:Name="EditItemButton" Width="35" Height="35" HorizontalAlignment="Left" Margin="10,0,0,0" ToolTip="Edit Item">
                        <Image Source="C:\Users\grobinson\source\repos\CalTools\CalTools WPF\images\LightTheme\edit.png" Width="30" Height="30"/>
                    </Button>
                    <Button x:Name="OpenFolderButton" Width="35" Height="35" HorizontalAlignment="Left" Margin="10,10,0,0">
                        <Image Source="C:\Users\grobinson\source\repos\CalTools\CalTools WPF\images\LightTheme\folder.png"/>
                    </Button>
                    <Button x:Name="NewReportButton" Width="35" Height="35" HorizontalAlignment="Left" Margin="10,10,0,0">
                        <Image Source="C:\Users\grobinson\source\repos\CalTools\CalTools WPF\images\LightTheme\report.png"/>
                    </Button>
                    <Button x:Name="DeleteItemButton" Width="35" Height="35" HorizontalAlignment="Left" Margin="10,10,0,0">
                        <Image Source="C:\Users\grobinson\source\repos\CalTools\CalTools WPF\images\LightTheme\delete.png"/>
                    </Button>
                    <Button x:Name="MoveItemButton" Width="35" Height="35" HorizontalAlignment="Left" Margin="10,10,0,0">
                        <Image Source="C:\Users\grobinson\source\repos\CalTools\CalTools WPF\images\LightTheme\move.png"/>
                    </Button>
                </StackPanel>
                <TreeView MinWidth="220" x:Name="CalibrationItemTree">
                    <TreeViewItem x:Name="CalibrationItemList" Header="Calibration Items" Focusable="False" HorizontalAlignment="Left" IsExpanded="True" IsManipulationEnabled="False"/>
                </TreeView>
                <GroupBox Header="Item Details" HorizontalAlignment="Stretch" MinWidth="720" Width="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition MinWidth="530" Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                    </Grid>
                </GroupBox>
            </DockPanel>
            <StackPanel Margin="55,0,0,0" Grid.Row="1" Width="220" HorizontalAlignment="Left">
                <ListBox Height="20" VerticalAlignment="Top" Margin="0,5,0,5"/>
                <TextBox Height="20" VerticalAlignment="Top" Margin="0,0,0,5"/>
            </StackPanel>
        </Grid>
        <!--Calendar View-->
        <Grid x:Name="CalendarViewGrid" Visibility="Collapsed" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!--Calendar, checkbox, combobox-->
            <StackPanel Grid.Column="0">
                <Viewbox MinHeight="250" MaxHeight="400">
                    <Calendar x:Name="ItemCalendar"/>
                </Viewbox>
                <CheckBox Content="Show only mandatory, in operation items."/>
                <!--Add other combo box items based on config settings-->
                <ComboBox>
                    <ComboBoxItem Content="Show All" IsSelected="True"/>
                </ComboBox>
            </StackPanel>
            <!--Text boxes and tables-->
            <StackPanel Grid.Column="1" Grid.ColumnSpan="2">
                <Label x:Name="weekTodoLabel" Content="To-do during week of...:"/>
                <DataGrid x:Name="todoTable" MinHeight="220" VerticalAlignment="Stretch" CanUserResizeColumns="True" Height="Auto" Width="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="SN" Width="100"/>
                        <DataGridTextColumn Header="Model" Width="100"/>
                        <DataGridTextColumn Header="Description" Width="*"/>
                        <DataGridTextColumn Header="Location" Width="100"/>
                        <DataGridTextColumn Header="Cal Vendor" Width="100"/>
                        <DataGridTextColumn Header="Cal Due By" Width="75"/>
                    </DataGrid.Columns>
                </DataGrid>
                <TextBox x:Name="todoTextBox" Focusable="False" Margin="0,5,0,0"/>
                <Separator HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0,5,0,5"/>
                <DataGrid x:Name="dueOnTable" VerticalAlignment="Stretch" CanUserResizeColumns="True" Height="Auto" Width="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="SN" Width="100"/>
                        <DataGridTextColumn Header="Model" Width="100"/>
                        <DataGridTextColumn Header="Description" Width="*"/>
                        <DataGridTextColumn Header="Location" Width="100"/>
                        <DataGridTextColumn Header="Cal Vendor" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
