<Window x:Class="CalTools_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalTools_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="610" Width="1000" MinHeight="610" MinWidth="1000"
        Name="CalToolsMainWindow" WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.RowDefinitions>
            <!--Menu bar-->
            <RowDefinition Height="20" MinHeight="20" MaxHeight="20"/>
            <!--Top row buttons-->
            <RowDefinition Height="50" MinHeight="50" MaxHeight="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Menu bar-->
        <DockPanel Grid.Row="0">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File"/>
            </Menu>
        </DockPanel>
        <!--Top row buttons-->
        <DockPanel Grid.Row="1">
            <Button Name="CalendarButton" Width="35" Height="35" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            <Button Name="ReceivingFolderButton"  MinWidth="150" MaxWidth="500" Height="20" HorizontalAlignment="Stretch" Margin="15,0,0,0"/>
            <Button Name="CalReportButton"  MinWidth="150" MaxWidth="500" Height="20" HorizontalAlignment="Stretch" Margin="10,0,0,0"/>
            <Button Name="UpdateButton"  MinWidth="150" MaxWidth="500" Height="20" HorizontalAlignment="Stretch" Margin="10,0,0,0"/>
            <Button Name="CalFolderButton"  MinWidth="150" MaxWidth="500" Height="20" HorizontalAlignment="Stretch" Margin="10,0,0,0"/>
            <Button Name="SettingsButton"  MinWidth="150" MaxWidth="500" Height="20" HorizontalAlignment="Stretch" Margin="10,0,0,0"/>
            <Separator HorizontalAlignment="Stretch" Background="White"/>
        </DockPanel>
        <!--Main View-->
        <Grid x:Name="MainViewGrid" Visibility="Visible" Grid.Row="2">
            <Grid.RowDefinitions>
                <!--Side buttons, Tree widget, and item details-->
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0">
                <StackPanel Width="55" HorizontalAlignment="Left">
                    <Button Name="EditItemButton" Width="35" Height="35" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                    <Button Name="OpenFolderButton" Width="35" Height="35" HorizontalAlignment="Left" Margin="10,10,0,0"/>
                    <Button Name="NewReportButton" Width="35" Height="35" HorizontalAlignment="Left" Margin="10,10,0,0"/>
                    <Button Name="DeleteItemButton" Width="35" Height="35" HorizontalAlignment="Left" Margin="10,10,0,0"/>
                    <Button Name="MoveItemButton" Width="35" Height="35" HorizontalAlignment="Left" Margin="10,10,0,0"/>
                </StackPanel>
                <TreeView Width="200" HorizontalAlignment="Left" Name="CalibrationItems" >
                    <TreeViewItem Header="Calibration Items" Focusable="False" HorizontalAlignment="Left"/>
                </TreeView>
                <GroupBox Header="Item Details" HorizontalAlignment="Stretch" MinWidth="730" Width="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition MinWidth="530" Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                    </Grid>
                </GroupBox>
            </DockPanel>
            <StackPanel Margin="55,0,0,0" Grid.Row="1" Width="200" HorizontalAlignment="Left">
                <ListBox Height="20" VerticalAlignment="Top" Margin="0,5,0,5"/>
                <TextBox Height="20" VerticalAlignment="Top" Margin="0,0,0,5"/>
            </StackPanel>
        </Grid>
        <!--Calendar View-->
        <Grid Visibility="Collapsed">
            
        </Grid>
    </Grid>
</Window>
